<h1>EAT-DA-BURGER!</h1>

<h2>Burgers Available!</h2>

<ul>
    {{#each burgers}}
    {{#unless devour}}
    {{> burgers/burger-block devour=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Burgers Devoured!</h2>

<ul>
    {{#each burgers}}
    {{#if devour}}
    {{> burgers/burger-block devour=false}}
    {{/if}}
    {{/each}}
</ul>

<form class="create-form">

    <div class="form-group">
        <label for="ca">Enter Burger Order Here</label>
        <input type="text-area" id="ca" name="name">
    </div>

    <button type="submit">Submit</button>
</form>